<idea-plugin version="2">
    <id>com.github.jk1.ytplugin</id>
    <name>YouTrack Integration Plugin</name>
    <version>0.1</version>
    <vendor url="https://github.com/jk1/youtrack-idea-plugin"/>

    <description><![CDATA[
        <p>Extends bundled task management plugin to provide deeper integration with YouTrack bug tracker:</p>
        <ul>
            <li>Adds command window to execute YouTrack commands from IDE</li>
            <li>More features are yet to come)</li>
        </ul>
        <p>Compatibility: YouTrack 5.2+, Intellij Idea 15.0.2+<p/>
    ]]></description>

    <!--change-notes><![CDATA[   ]]></change-notes-->

    <!-- IntelliJ IDEA 15, WebStorm 11, PyCharm 5, PhpStorm 10, RubyMine 8, AppCode 3.3, CLion 1.2, DataGrip 1.0 -->
    <idea-version since-build="143.0"/>
    <!-- Enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>
    <!-- We depend on bundled task management plugin -->
    <depends>com.intellij.tasks</depends>

    <actions>
        <action id="com.github.jk1.ytplugin.actions.OpenCommandWindowAction"
                class="com.github.jk1.ytplugin.actions.OpenCommandWindowAction">
            <keyboard-shortcut first-keystroke="control shift Y" keymap="$default"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <project-components>
        <component>
            <interface-class>com.github.jk1.ytplugin.components.CommandComponent</interface-class>
            <implementation-class>com.github.jk1.ytplugin.components.CommandComponentImpl</implementation-class>
        </component>
        <component>
            <interface-class>com.github.jk1.ytplugin.components.TaskManagerProxyComponent</interface-class>
            <implementation-class>com.github.jk1.ytplugin.components.TaskManagerProxyComponentImpl
            </implementation-class>
        </component>
        <component>
            <interface-class>com.github.jk1.ytplugin.components.AdminComponent</interface-class>
            <implementation-class>com.github.jk1.ytplugin.components.AdminComponentImpl</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <!--YouTrack command language support-->
        <fileTypeFactory implementation="com.github.jk1.ytplugin.lang.CommandFileFactory"/>
        <lang.parserDefinition language="YouTrack Commands" implementationClass="com.github.jk1.ytplugin.lang.CommandParserDefinition"/>
        <completion.contributor language="YouTrack Commands"
                                implementationClass="com.github.jk1.ytplugin.lang.CommandCompletionContributor"/>
        <externalAnnotator language="YouTrack Commands" implementationClass="com.github.jk1.ytplugin.lang.CommandHighlightingAnnotator"/>
    </extensions>
</idea-plugin>