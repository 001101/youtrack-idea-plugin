<idea-plugin version="2">
    <id>com.github.jk1.ytplugin</id>
    <name>YouTrack Integration Plugin</name>
    <version>0.1</version>
    <vendor url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[ Initial version ]]></change-notes>

    <!-- IntelliJ IDEA 15, WebStorm 11, PyCharm 5, PhpStorm 10, RubyMine 8, AppCode 3.3, CLion 1.2, DataGrip 1.0 -->
    <idea-version since-build="143.0"/>

    <!-- Enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>
    <!-- We depend on bundled task management plugin -->
    <depends>com.intellij.tasks</depends>

    <actions>
        <action id="com.github.jk1.ytplugin.actions.OpenCommandWindowAction"
                class="com.github.jk1.ytplugin.actions.OpenCommandWindowAction">
            <keyboard-shortcut first-keystroke="control alt J" keymap="$default"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <project-components>
        <component>
            <interface-class>com.github.jk1.ytplugin.components.CommandProjectComponent</interface-class>
            <implementation-class>com.github.jk1.ytplugin.components.CommandRestProjectComponent</implementation-class>
        </component>
    </project-components>

</idea-plugin>